<%-include("partials/headerN")-%>

<div class="container root_login">
  <div class="card login_card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-body">
      <h2 class="card-title login_title">Admin Login</h2>
      <% if (error ) { %>
      <p class="error-message alert"><%= error %></p>
      <% }%>
      <form action="/admin" method="post">
        <div class="form-floating mb-3 is-invalid">
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
            placeholder="username"
          />
          <label for="username">Username</label>
        </div>

        <div class="form-floating mb-3 is-invalid">
          <input
            type="password"
            class="form-control"
            id="password"
            required
            name="password"
            placeholder="password"
          />
          <label for="password">Password</label>
        </div>
        <button type="submit" class="btn btn-outline-primary">Login</button>
      </form>
      <p class="login_txt">Go back to Doctor Login? <a href="/">Login</a></p>
    </div>
  </div>
</div>

<%-include("partials/footer")-%>
